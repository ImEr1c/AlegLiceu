<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:id="root" styleClass="rootBg"
      fx:controller="com.imer1c.alegliceu.controllers.HomeViewController" alignment="CENTER">

    <HBox alignment="CENTER" spacing="15">
        <VBox.margin>
            <Insets top="12" bottom="12" />
        </VBox.margin>
        <Button text="Adaugă" fx:id="add" />
        <Button text="Pornește Simularea" fx:id="simulation" />
        <Button text="Note și repartizare" fx:id="gradesInfoScreen" />
        <Button text="Imprimare" fx:id="print" />
        <Button text="Ordonare" fx:id="sort" />
    </HBox>

    <StackPane VBox.vgrow="ALWAYS">
        <ListView fx:id="list" VBox.vgrow="ALWAYS" styleClass="liceu_list" StackPane.alignment="CENTER" />
        <HBox styleClass="copy-bar" fx:id="copyBar" alignment="CENTER" StackPane.alignment="TOP_CENTER" maxHeight="200" visible="false" mouseTransparent="true" />
    </StackPane>


</VBox>
