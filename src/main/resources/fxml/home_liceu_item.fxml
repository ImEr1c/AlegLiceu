<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" fx:id="root" style="-fx-padding: 0 10 0 10" maxHeight="120" prefHeight="120"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER" styleClass="homeLiceuItem"
      fx:controller="com.imer1c.alegliceu.controllers.HomeLiceuItemController">

    <Label fx:id="index" style="-fx-font-size: 40" minWidth="60" maxWidth="60" prefWidth="60" />
    <Label fx:id="medie" style="-fx-font-size: 40" textAlignment="CENTER" alignment="CENTER" wrapText="true" minWidth="170" prefWidth="170" maxWidth="170" />
    <VBox fx:id="nameProfileGroup" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Label fx:id="name" style="-fx-font-size: 40; -fx-font-weight: bold" alignment="CENTER" />
        <Label fx:id="profil" style="-fx-font-size: 25" alignment="CENTER" />
    </VBox>

    <VBox minWidth="170" prefWidth="170" maxWidth="170" alignment="CENTER">
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="delete" styleClass="image-button, red, delete-button" />
            <Button fx:id="move" styleClass="image-button, move-button" />
        </HBox>
        <Label fx:id="cod" style="-fx-font-size: 40" alignment="CENTER_RIGHT" wrapText="true"/>
    </VBox>

</HBox>
